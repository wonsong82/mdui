.mdui-effect__ripple {
  width 100%
  height 100%
  display block
  overflow hidden
  position absolute
  top 0
  left 0
}

.mdui-effect__ripple__background {
  transform translate(-50%, -50%)
  border-radius 50%
  position absolute
  top 50%
  left 50%
  pointer-events none
  overflow hidden
  display block
}

.mdui-effect__ripple__background__inner-bg {
  width 100%
  height 100%
  display block
}