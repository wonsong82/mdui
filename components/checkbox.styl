.mdui-checkbox {
  // Adjustable
  width $checkbox__container-size
  height $checkbox__container-size
  line-height $checkbox__container-size
  color $checkbox__off-color
  vertical-align middle
  margin 0
  // Fixed
  border-radius 50%
  z-index 1 // Webkit transition + border radius issue
  position relative
  display inline-block
  padding 0
  box-sizing border-box
  overflow hidden
  outline none
  user-select none
  -webkit-tap-highlight-color rgba(0,0,0,0)
}
.mdui-checkbox__input {
  position absolute
  top 0
  left 0
  appearance none
  border none
  width 0
  height 0
  opacity 0
}
.mdui-checkbox__box {
  // Adjustable
  width $checkbox__checkbox-size
  height $checkbox__checkbox-size
  margin ($checkbox__container-size - $checkbox__checkbox-size) * 0.5
  // Fixed
  display block
  box-sizing border-box
  cursor pointer
  position relative
}
.mdui-checkbox__box__bg,
.mdui-checkbox__box__check {
  display block
  box-sizing border-box
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  pointer-events none
}
.mdui-checkbox__box__bg__text,
.mdui-checkbox__box__check__text {
  // Adjustable
  top ($checkbox__icon-font-size - $checkbox__checkbox-size) * -0.5
  left ($checkbox__icon-font-size - $checkbox__checkbox-size) * -0.5
  font-size $checkbox__icon-font-size // actual 18px size
  width $checkbox__icon-font-size
  height $checkbox__icon-font-size
  // Fixed
  display block
  position relative
}
.mdui-checkbox__box__bg__text {
  // Adjustable
  color $checkbox__off-color
  // Fixed
  will-change color
  transition all 0.5s $easing__in-out-quad
  z-index 1 // Chrome has a optimization bug with border-raius when transition
}
.mdui-checkbox__box__check {
  position absolute
  top 0
  left 0
}
.mdui-checkbox__box__check__text {
  // Adjustable
  color $checkbox__on-color
  // Fixed
  transform scale(0)
  opacity 0
  will-change transform, opacity
  transition all 0.3s $easing__in-out-quad
  z-index 1 // Chrome has a optimization bug with border-raius when transition
}

// Checked
.mdui-state--checked.mdui-checkbox,
.mdui-state--checked .mdui-checkbox__box__bg__text {
  // Adjustable
  color $checkbox__on-color
}
.mdui-state--checked .mdui-checkbox__box__bg {
  opacity 0
}
.mdui-state--checked .mdui-checkbox__box__check__text {
  opacity 1
  transform scale(1)
}


// Disabled
.mdui-state--disabled .mdui-checkbox__box {
  cursor default
}
.mdui-state--disabled .mdui-checkbox__box__bg__text,
.mdui-state--disabled .mdui-checkbox__box__check__text {
  // Adjustable
  color $checkbox__disabled-color
}




/**
 * Dark Theme
 */

.dark.mdui-checkbox,
.dark .mdui-checkbox__box__bg__text {
  // Adjustable
  color $checkbox__off-color--dark
}


// Checked
.dark.mdui-state--checked.mdui-checkbox,
.dark.mdui-state--checked .mdui-checkbox__box__check__text {
  // Adjustable
  color $checkbox__on-color--dark
}

// Disabled
.dark.mdui-state--disabled .mdui-checkbox__box__bg__text,
.dark.mdui-state--disabled .mdui-checkbox__box__check__text {
  // Adjustable
  color $checkbox__disabled-color--dark
}